@model Test.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Do you want to delete this employee?</h2>

<form action="@Url.Action("ConfirmDelete","Home",new { id= Model.Id})" 
method="post">

    <input type="hidden" name="Id"
           value="@Model.Id" />

    <table border="1" cellpadding="10">
        <tr>
            <td>Employee ID :</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>First Name :</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Last Name :</td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td>Last Name :</td>
            <td>@Model.Department</td>
        </tr>

        <tr>
            <td colspan="2">
                <button type="submit">Delete</button>
            </td>
        </tr>
    </table>


</form>
