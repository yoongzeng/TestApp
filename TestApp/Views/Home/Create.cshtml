@model Test.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create Employee";
}
@using Test.Models
<form asp-controller="home" 
asp-action="create" 
method="post" class="mt-3">
        
    <div class="form-group row">
        <label asp-for="Name" 
class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name"
                   class="form-control" placeholder="Name">
            @Html.ValidationMessageFor(model => Model.Name, "", new { @class = "error" })
        </div>
                                  

    </div>



    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
        </div>
    </div>



    <div class="form-group row">
        <select name="Department">
            @for (int i = 0; i < Enum.
                GetNames(typeof(Dept)).Length; i++)
            {
                <option value=@Dept.GetName(typeof(Dept)
                             ,
                     i)>@Dept.GetName(typeof(Dept), i)
               </option>
            }
        </select>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" 
             class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
